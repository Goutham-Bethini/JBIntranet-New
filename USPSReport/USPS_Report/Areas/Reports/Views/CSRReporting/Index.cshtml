@model USPS_Report.Areas.Reports.Models.CSRReportModel
@using Kendo.Mvc.UI

@{
    ViewBag.Title = "CSRReporting Tool";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="middle">
    @using (Html.BeginForm("Index", "CSRReporting", FormMethod.Post))
    {
        <div class="form-inline">
            <label>Date </label>


            @Html.Kendo().DatePicker().Name("date").Value(Model.date).Format("MM/dd/yyyy")
           
            <button class="btn btn-primary btn-large" type="submit">View</button>
        </div>

    }
</div>

<hr />
@if (Model != null && Model.callPerPeroson != null)
{
   
    <div class="table-responsive middle">
        <h3>Total numbers of calls are : @Html.DisplayName(Model.callPerPeroson.Sum(t=>t.Count).ToString()) </h3>
        <table data-sortable class="table table-hover table-striped" style="border:groove;width:300px">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Count</th>

                </tr>
            </thead>
            <tbody>
                @foreach (var rec in Model.callPerPeroson)
                {
                    <tr>
                        <td>@rec.Name </td>
                        <td>@rec.Count </td>

                    </tr>
                }
            </tbody>

        </table>
    </div>
}


<style>
    th {
        background-color: dodgerblue;
        color: white;
    }
    .middle {
        margin: auto;
        width: 900px;
    }
</style>