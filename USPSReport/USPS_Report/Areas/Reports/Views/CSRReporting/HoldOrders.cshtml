@model USPS_Report.Areas.Reports.Models.SpecialHoldsVM

@{
    ViewBag.Title = "HoldOrders";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<center>

    @if (Model != null && Model.holdlist != null)
    {
        <div class="row">

            <div>
                <div class=" row">
                    <h3 style="color:blue">
                        Total Count =  @Model.holdlist.Count()
                    </h3>
                </div>
                <hr />


                <div class="table-responsive">
                    <table data-sortable class="table table-hover table-striped table-bordered" style="width:90%; align-content:center">
                        <thead>
                            <tr>
                                <th>Account</th>
                                <th>WorkOrder</th>
                                <th>Hold Reson</th>
                                <th>RequestDate</th>
                                <th>ID_Payer</th>
                                <th>Payer Name</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var rec in Model.holdlist)
                {
                                <tr>
                                    <td>@rec.Account</td>
                                    <td>@rec.ID</td>
                                    <td>@rec.HoldFromShippingReason</td>
                                    <td>@String.Format("{0:MM/dd/yyyy}", rec.Request_Date)</td>
                                    <td>@rec.ID_Payer</td>
                                    <td>@rec.PayerName</td>
                                  
                                </tr>
                            }
                        </tbody>

                    </table>
                </div>

            </div>
        </div>
    }
</center>

<style>
    th {
        background-color: dodgerblue;
        color: white;
    }

    .middle {
        margin: auto;
        width: 900px;
    }
</style>



