@model USPS_Report.Areas.Reports.Models.SmartActionPayerVM

@{
    ViewBag.Title = "SA_Payers";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="middle">
    <h1>   Smart Action Payers   </h1>

</div>

@if (Model != null && Model.smartActionPayer != null)
{
    <div class="row" style="width:85%;margin:auto">
        <h3 style="color:blue">
            Total Count =  @Model.smartActionPayer.Count()
        </h3>
        <div class="table-responsive">
            <table data-sortable class="table table-hover table-striped table-bordered">
                <thead>
                    <tr>
                        <th>Payer ID</th>
                        <th>Service Type</th>
                        <th>Name</th>
                        <th>Product Line</th>


                    </tr>
                </thead>
                <tbody>
                    @foreach (var rec in Model.smartActionPayer)
                {
                        <tr>
                            <td>@rec.PayerID</td>
                            <td>@rec.ServiceType</td>
                            <td>@rec.Name</td>
                            <td>@rec.ProdLine</td>

                        </tr>
                    }
                </tbody>

            </table>
        </div>
    </div>
}

        <style>
            th {
                background-color: dodgerblue;
                color: white;
            }

            .middle {
                margin: auto;
                width: 500px;
            }
        </style>

