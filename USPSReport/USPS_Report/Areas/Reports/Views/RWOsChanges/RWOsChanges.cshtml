@model USPS_Report.Areas.Reports.Models.RWOsChanges.RWOsChangesVM
@using Kendo.Mvc.UI
@{
    ViewBag.Title = "RWOsChanges";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<center>
    <h2> RWO Changes</h2>
    @using (Html.BeginForm("RWOsChangesReport", "RWOsChanges", FormMethod.Post))
    {
        <div class="form-inline">
            <label>Start Date </label>
            @Html.Kendo().DatePicker().Name("startDt").Value(Model.StartDt).Format("MM/dd/yyyy")
            <label>End Date </label>
            @Html.Kendo().DatePicker().Name("endDt").Value(Model.EndDt).Format("MM/dd/yyyy")
            <button id="test" class="btn btn-primary btn-large" type="submit">Submit</button>
        </div>
    }
</center>
<hr />
@if (Model != null && Model.Details != null)
{
    <div class="table-responsive middle">
        <table data-sortable class="table table-hover table-striped">
            <thead>
                <tr>
                    <th>Account</th>
                    <th>Product Code</th>
                    <th>Product Description</th>
                    <th>LastChangedBy</th>
                    <th>ChangedDate</th>
                    <th>CreatedBy</th>
                    <th>CreatedDate</th>
                    <th>NextRepeatDate</th>
                    <th>Qty</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var rec in Model.Details)
                {
                <tr>
                    <td>@rec.Account </td>
                    <td>@rec.ProductCode </td>
                    <td>@rec.ProductDescription </td>
                    <td>@rec.LastChangedBy </td>
                    <td>@rec.ChangedDate </td>
                    <td>@rec.CreatedBy </td>
                    <td>@rec.CreatedDate </td>
                    <td>@rec.NextRepeatDate </td>
                    <td>@rec.Qty </td>
                </tr>
                }
            </tbody>
        </table>
    </div>
}

