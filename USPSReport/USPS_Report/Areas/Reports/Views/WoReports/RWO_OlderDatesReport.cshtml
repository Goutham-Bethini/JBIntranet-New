@model IEnumerable<USPS_Report.Areas.Reports.Models.RWOwithOlderDatesVM>

@{
    ViewBag.Title = "RWO_OlderDatesReport";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="middle">
    <h1>RWO’s with 2099 Dates</h1>
</div>

<br />

<div class="row">
    <div class="col-md-1"></div>
    <div class="col-md-10">
        <div class="row middle">
            <h3 style="color:blue">
              Total Records = @Model.Count() 
            </h3>
        </div>
        <hr />
        <div class=" row">

            <div class="table-responsive">
                @{ var num = 1; }
                <table data-sortable class="table table-hover table-striped">
                    <thead>
                        <tr>
                            <th>
                                sr. No.
                            </th>
                            <th>
                                Account
                            </th>
                            <th>
                                NextRepeatDate
                            </th>
                            <th>
                                Product
                            </th>

                            <th>
                                CreatedBy
                            </th>
                            <th>
                                CreateDate
                            </th>
                            <th>
                                ChangedBy
                            </th>
                            <th>
                                LastChanged
                            </th>
                            
                        </tr>
                    </thead>
                    @foreach (var item in Model)
                    {
                    <tr>
                        <td>@num</td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Account)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.NextRepeatDate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ProductCode)
                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => item.CreatedBy)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CreateDate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ChangedBy)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.LastChangedDate)
                        </td>

                    </tr>
                        num++;
                    }

                </table>
            </div>

        </div>
    </div>
</div>


<style>
   

    th {
        background-color: dodgerblue;
        color: white;
    }

    .table-striped>tr:nth-child(odd){
   background-color:red;
}

     .middle {
        margin: auto;
        width: 900px;
    }
</style>