@model USPS_Report.Areas.Reports.Models.RWOMultipleTimesVM

@{
    ViewBag.Title = "RWOMultipleTimes";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="middle">
    <h1>Account with Multiple Delivery Times</h1>
</div>

<br />
@if (Model != null && Model.rwoMultipleTimes != null)
{
    <div class="row">
        <div class="col-md-2"></div>
        <div class="col-md-10">
            <div class=" row">
                <h3 style="color:blue">
                    Total Count =  @Model.rwoMultipleTimes.Count()
                </h3>
            </div>
            <hr />

            <div class="table-responsive">
                <table data-sortable class="table table-hover table-striped table-bordered">
                    <thead>
                        <tr>
                            <th>Account</th>
                            <th>FirstName</th>
                            <th>LastName</th>
                            <th>Times</th>
                            <th>Time1</th>
                            <th>Time2</th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var rec in Model.rwoMultipleTimes)
                {
                            <tr>
                                <td>@rec.Account</td>
                                <td>@rec.First_Name</td>
                                <td>@rec.Last_Name</td>
                                <td>@rec.Times</td>
                                <td>@rec.Time1</td>
                                <td>@rec.Time2</td>

                            </tr>
                        }
                    </tbody>

                </table>
            </div>

        </div>
    </div>
}

<style>
                th {
                    background-color: dodgerblue;
                    color: white;
                }

                .middle {
        margin: auto;
        width: 900px;
    }
 </style>


