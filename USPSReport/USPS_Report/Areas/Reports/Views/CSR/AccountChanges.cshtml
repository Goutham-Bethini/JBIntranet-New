@model USPS_Report.Areas.Reports.Models.RWOAccountChangesVM

@{
    ViewBag.Title = "ProductForcast";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div style="width:500px;margin:auto">
    <h2>Find who last updated a specific account</h2>
</div>
<div style="width:350px;margin:auto">
   
@using (Html.BeginForm("AccountChanges", "CSR", FormMethod.Post))
{
    <div class="row">
        <label><strong>Account Number:</strong></label>
        @Html.TextBoxFor(t=>t.Account)
    </div>
    <br />
    <div class="row">
       <button class="btn btn-primary btn-large" type="submit" style="width: 300px; margin: 0 auto">Submit</button>
      </div>
}
</div>

<br />
<div>
    @if (Model != null && Model.rwoAccountUpdates != null)
    {
        <div class="table-responsive">
            <table data-sortable class="table table-hover table-striped table-bordered" style="width:950px;margin:auto">
                <thead>
                    <tr>
                        <th>Account</th>
                        <th>Name</th>
                        <th>Acc Updated</th>
                        <th>Updated By</th>
                        <th>Acc Info Updated</th>
                        <th>Updated By</th>

                    </tr>
                </thead>
                <tbody>

                    
                        <tr>
                            <td>@Html.DisplayFor(m=>m.rwoAccountUpdates.Account)</td>
                            <td>@Html.DisplayFor(m => m.rwoAccountUpdates.Last_name) , @Html.DisplayFor(m => m.rwoAccountUpdates.First_Name)</td>
                            <td>@Html.DisplayFor(m => m.rwoAccountUpdates.AccountUpdated)</td>
                            <td>@Html.DisplayFor(m => m.rwoAccountUpdates.AccountUpdatedBy)</td>
                            <td>@Html.DisplayFor(m => m.rwoAccountUpdates.AccountInfUpdated)</td>
                            <td>@Html.DisplayFor(m => m.rwoAccountUpdates.AccountInfUpdatedBy)</td>

                        </tr>
                  
                </tbody>

            </table>
        </div>

    }
  <br />
    
    @if (Model != null && Model.Insuranceupdates != null)
    {
        <div style="width:200px;margin:auto">
            <h3>Insurance Updates:</h3>
        </div>
        <div class="table-responsive">
            <table data-sortable class="table table-hover table-striped table-bordered" style="width:800px;margin:auto">
                <thead>
                    <tr>
                        <th>Payer</th>
                        <th>Updated By</th>
                        <th>Updated</th>
                        
                    </tr>
                </thead>
                <tbody>
                    @foreach (var rec in Model.Insuranceupdates)
                    {
                    <tr>
                       <td>@rec.Payer</td>
                        <td>@rec.InsuranceUpdatedBy</td>
                        <td>@rec.InsuranceUpdated</td>
                    </tr>
                    }
                </tbody>

            </table>
        </div>

    }
</div>

<style>
    .middle {
        margin: auto;
        width: 900px;
    }

    th {
        background-color: dodgerblue;
        color: white;
    }
</style>
