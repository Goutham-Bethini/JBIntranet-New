@model USPS_Report.Areas.Reports.Models.RWOChangesVM

@{
    ViewBag.Title = "RWOChanges";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div style="width:700px;margin:auto">
    <h2>Find who changed or added RWO's for a specific account</h2>
</div>
<div style="width:350px;margin:auto">

    @using (Html.BeginForm("RWOChanges", "CSR", FormMethod.Post))
    {
        <div class="row">
            <label><strong>Account Number:</strong></label>
            @Html.TextBoxFor(t => t.Account)
        </div>
        <br />
        <div class="row">
            <button class="btn btn-primary btn-large" type="submit" style="width: 300px; margin: 0 auto">Submit</button>
        </div>
    }
</div>

<br />
<div>
   

    @if (Model != null && Model.rwoChanges != null)
    {
       
        <div class="table-responsive">
            <table data-sortable class="table table-hover table-striped table-bordered" style="width:1200px;margin:auto">
                <thead>
                    <tr>
                        <th>Account</th>
                        <th>Product</th>
                        <th>Description</th>
                        <th>Changed By</th>
                        <th>Last Change</th>
                        <th>Added By</th>
                        <th>Added</th>

                    </tr>
                </thead>
                <tbody>
                    @foreach (var rec in Model.rwoChanges)
                    {
                        <tr>
                            <td>@rec.Account</td>
                            <td>@rec.ProductCode</td>
                            <td>@rec.productdescription</td>
                            <td>@rec.LastChangedBy</td>
                            <td>@String.Format("{0:d}", rec.LastChange)</td>
                            <td>@rec.LegalName</td>
                            <td>@String.Format("{0:d}", rec.CreatedBy)</td>
                        </tr>
                    }
                </tbody>

            </table>
        </div>

    }
</div>

<style>
    
    th {
        background-color: dodgerblue;
        color: white;
    }
</style>

