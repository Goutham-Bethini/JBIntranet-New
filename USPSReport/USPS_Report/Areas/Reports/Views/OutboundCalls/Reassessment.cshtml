@model USPS_Report.Areas.Reports.Models.ReassessmentCallsVM
@using Kendo.Mvc.UI
@{
    ViewBag.Title = "ReassessmentCalls";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="middle">
    @using (Html.BeginForm("Reassessment", "OutboundCalls", FormMethod.Post))
    {
        <div class="form-inline">
            <label>Start Date </label>


            @Html.Kendo().DatePicker().Name("StartDate").Value(Model.StartDate).Format("MM/dd/yyyy")
            <label>End Date</label>
            @Html.Kendo().DatePicker().Name("EndDate").Value(Model.EndDate).Format("MM/dd/yyyy")
            <button class="btn btn-primary btn-large" type="submit">View</button>
        </div>

    }
</div>

<hr />
<h3 class="middle">Total records are: @Model.details.Count()</h3>
<hr />
@if (Model != null && Model.details != null)
{
    <div class="table-responsive middle">
        @*<h3>Total count : @Html.DisplayName(Model.GetAssessmentCountReport.Count().ToString()) </h3>*@
        <table data-sortable class="table table-hover table-striped">
            <thead>
                <tr>
                    <th>Account</th>
                    <th>SpokeWith</th>
                    <th>RelationShip</th>
                    <th>IsCallAnswered</th>
                    <th>CallAttempts</th>
                    <th>CallEndStatus</th>
                    <th>UpdateTime</th>

                </tr>
            </thead>
            <tbody>
                @foreach (var rec in Model.details)
                {
                    <tr>
                        <td>@rec.account </td>
                        <td>@rec.SpokeWith </td>
                        <td>@rec.RelationShip </td>
                        <td>@rec.IsCallAnswered </td>
                        <td>@rec.CallAttempts </td>
                        <td>@rec.CallEndStatus </td>
                        <td>@rec.LoadTime.ToString("MM/dd/yyyy") </td>

                    </tr>
                }
            </tbody>

        </table>
    </div>
}



<style>
    th {
        background-color: dodgerblue;
        color: white;
    }

    .middle {
        margin: auto;
        width: 900px;
    }
</style>

