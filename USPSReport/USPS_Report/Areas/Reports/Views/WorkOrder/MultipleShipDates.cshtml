@model USPS_Report.Areas.Reports.Models.multidatesVM
@using Kendo.Mvc.UI
@{
    ViewBag.Title = "MultipleOrderReport";
    Layout = "~/Views/Shared/_Layout.cshtml";
}




<div class="middle">
    <div class="row">
        <h2>Accounts with more than one date in @DateTime.Today.Month / @DateTime.Today.Year</h2>
    </div>
    <div class="row">
        <h4 style="color:blue">(@Model.AutoCount accounts auto corrected)</h4>
    </div>
<br />
    <div class="row">
        <div class="col-md-2">
            @Html.ActionLink("<<-Last Month", "LastMonthShipDates", "WorkOrder", new { _stDt = Model.StartDate, _endDt = Model.EndDate }, new { @class = "btn btn-success" })
        </div>
        <div class="col-md-2">
            @Html.ActionLink("Next Month->>", "NextMonthShipDates", "WorkOrder", new { _stDt = Model.StartDate, _endDt = Model.EndDate }, new { @class = "btn btn-success" })
        </div>

    </div>


  <hr />

    @if (Model != null && Model.details != null)
    {
      
        <div class="table-responsive middle">
            @{ var count = 1; }
            <table data-sortable class="table table-hover table-striped" style="width:700px">
                <thead>
                    <tr>
                        <th>Sr.No.</th>
                        <th>Account</th>
                        <th>Dates</th>
                       

                    </tr>
                </thead>
                <tbody>
                    @foreach (var rec in Model.details)
                {
                        <tr>
                            <td>@count</td>
                            <td>@rec.Account</td>

                            <td>@rec.dates</td>
                         
                        </tr>
                        count++;
                    }
                </tbody>

            </table>
        </div>

    }


</div>

<style>
    .middle {
        margin: auto;
        width:900px;
    }

    th {
        background-color: dodgerblue;
        color: white;
    }
</style>
