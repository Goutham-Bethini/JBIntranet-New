@model USPS_Report.Areas.Reports.Models.AssessmentDueByMonth

@{
    ViewBag.Title = "AssessmentsDueByMonth";
    Layout = "~/Views/Shared/_Layout.cshtml";
}




<hr />
@if (Model != null && Model.assessmentDueByMonth != null)
{

    <div class="table-responsive middle">
        <h3>@Html.DisplayName(Model.assessmentDueByMonth.Count().ToString()) Accounts need clinical assessments from @Html.DisplayName(Model.firstDate.ToString("MM/dd/yyyy")) to @Html.DisplayName(Model.lastDate.ToString("MM/dd/yyyy"))</h3>
        <table data-sortable class="table table-hover table-striped" style="border:groove;width:700px">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Expires</th>
                    <th>State</th>
                    <th>Age</th>
                    <th>Duration</th>
                 
                </tr>
            </thead>
            <tbody>
                @foreach (var rec in Model.assessmentDueByMonth)
                {
                    <tr>
                        <td>@rec.Account </td>
                        <td>@rec.Expires </td>
                        <td>@rec.state </td>
                        <td>@rec.Age </td>
                        <td>@rec.Duration </td>
                       
                    </tr>
                }
            </tbody>

        </table>
    </div>
}


<style>
    th {
        background-color: dodgerblue;
        color: white;
    }

    .middle {
        margin: auto;
        width: 900px;
    }
</style>
