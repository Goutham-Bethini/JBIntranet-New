@model USPS_Report.Areas.Reports.Models.AssessmentCountVM
@using Kendo.Mvc.UI
@{
    ViewBag.Title = "AssessmentCount";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="middle">
    @using (Html.BeginForm("AssessmentCount", "ClinicalAssessment", FormMethod.Post))
    {
        <div class="form-inline">
            <label>Start Date </label>


            @Html.Kendo().DatePicker().Name("StartDate").Value(Model.StartDate).Format("MM/dd/yyyy")
            <label>End Date</label>
            @Html.Kendo().DatePicker().Name("EndDate").Value(Model.EndDate).Format("MM/dd/yyyy")
            <button class="btn btn-primary btn-large" type="submit">View</button>
        </div>

    }
</div>

<hr />
@if (Model != null && Model.GetAssessmentCountReport != null)
{
    <div class="table-responsive middle">
        @*<h3>Total count : @Html.DisplayName(Model.GetAssessmentCountReport.Count().ToString()) </h3>*@
        <table data-sortable class="table table-hover table-striped">
            <thead>
                <tr>
                    <th>User</th>
                    <th>Count</th>

                </tr>
            </thead>
            <tbody>
                @foreach (var rec in Model.GetAssessmentCountReport)
                {
                    <tr>
                        <td>@rec.User </td>
                        <td>@rec.Count </td>

                    </tr>
                }
            </tbody>

        </table>
    </div>
}



<style>
    th {
        background-color: dodgerblue;
        color: white;
    }

    .middle {
        margin: auto;
        width: 900px;
    }
</style>
