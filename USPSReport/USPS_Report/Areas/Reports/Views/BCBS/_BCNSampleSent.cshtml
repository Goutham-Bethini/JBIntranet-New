</div>


<script>
    $('#SampleChoice').click(function () {
        var $this = $(this);

        if ($this.is(':checked')) {
            $('#SampleTxt').removeAttr("disabled");
        } else {
            $('#SampleTxt').attr("disabled", "disabled")
        }
    });

    $('#SampleTask').click(function () {
        var $this = $(this);

        if ($this.is(':checked')) {
            $('#SampleTxt').removeAttr("disabled");
        } else {
            $('#SampleTxt').attr("disabled", "disabled")
        }
    });
</script>
