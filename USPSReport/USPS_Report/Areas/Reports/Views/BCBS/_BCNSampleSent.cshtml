    <div class="row">
        <div class="col-md-1"></div>
        <div class=" col-md-2">@Html.CheckBoxFor(m => m.SampleChoice) <label> Sample Choice </label></div>

    </div>
    <div class="row">
        <div class="col-md-1"></div>
        <div class="col-md-2">@Html.CheckBoxFor(m => m.SampleTask) <label> Sample Task </label></div>

    </div>
    <div class="row">
        <div class="col-md-1"></div>
        <div class="col-md-2">@Html.CheckBoxFor(m => m.SampleOrderSent) <label> Sample Order Sent </label></div>

    </div>
    <div class="row">
        <div class="col-md-1"></div>
        <div class="col-md-2">@Html.TextAreaFor(m => m.SampleTxt, new { rows = "6", cols = "40", disabled = "disabled" })</div>

    </div>

