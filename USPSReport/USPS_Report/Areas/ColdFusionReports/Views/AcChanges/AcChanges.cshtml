@model USPS_Report.Areas.ColdFusionReports.Models.DataModels.AcChanges.AcChangesVM
@using Kendo.Mvc.UI
@{
    ViewBag.Title = "AcChanges";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h3 class="middle" style="text-align:center;">Find who last updated a specific account</h3>
<hr />

<div>
    @using (Html.BeginForm("AcChangesData", "AcChanges", FormMethod.Post))
    {
        <center>
            <table>
                <tr>
                    <td>@Html.ValidationMessageFor(t => t.AccountNumber, "", new { @class = "redText" })</td>
                </tr>
                <tr>
                    <td>Account Number: @Html.TextBoxFor(t => t.AccountNumber)</td>
                </tr>
            </table>
            <br />
            <button class="btn btn-primary btn-large" type="submit">Submit</button>
        </center>
    }
</div>
<hr />
@if (Model != null && Model.AcDetails != null)
{
    <div class="table-responsive middle">
        <table data-sortable class="table table-hover table-striped">
            <thead>
                <tr>
                    <th>Account</th>
                    <th>Name</th>
                    <th>Acct Updated</th>
                    <th>Updated By</th>
                    <th>Acct_Info Updated</th>
                    <th>Updated By</th>


                </tr>
            </thead>
            <tbody>
                @foreach (var rec in Model.AcDetails)
                {
                    <tr>
                        <td>@rec.Account </td>
                        <td>@rec.Name </td>
                        <td>@rec.AcctUpdated </td>
                        <td>@rec.UpdatedBy </td>
                        <td>@rec.AcctInfoUpdated </td>
                        <td>@rec.AcctInfoUpdatedBy </td>
                    </tr>
                }
            </tbody>

        </table>
    </div>
}
@if (Model != null && Model.isDataExist)
{
    <hr />
    <h3 class="middle" style="text-align:center;">Insurance Updates:</h3>
}
@if (Model != null && Model.AcPayerDetails != null)
{
    <div class="table-responsive middle">
        <table data-sortable class="table table-hover table-striped">
            <thead>
                <tr>
                    <th>Payer</th>
                    <th>Updated By</th>
                    <th>Updated</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var rec in Model.AcPayerDetails)
                {
                    <tr>
                        <td>@rec.Payer </td>
                        <td>@rec.UpdatedBy </td>
                        <td>@rec.Updated </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}

<style>
    .redText {
        color: Red;
    }
</style>