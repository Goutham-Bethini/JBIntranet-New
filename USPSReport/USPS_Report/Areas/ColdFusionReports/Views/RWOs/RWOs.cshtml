@model USPS_Report.Areas.ColdFusionReports.Models.DataModels.RWOs.RWOsVM
@using Kendo.Mvc.UI
@{
    ViewBag.Title = "RWOs";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h3 class="middle" style="text-align:center;">Find who changed or added RWO's for a specific account</h3>
<hr />

<div>
    @using (Html.BeginForm("RWOsData", "RWOs", FormMethod.Post))
    {
        <center>
            <table>
                <tr>
                    <td>@Html.ValidationMessageFor(t => t.AccountNumber, "", new { @class = "redText" })</td>
                </tr>
                <tr>
                    <td>Account Number: @Html.TextBoxFor(t => t.AccountNumber)</td>
                </tr>
            </table>            
            <br />
            <button class="btn btn-primary btn-large" type="submit">Submit</button>
        </center>
    }
</div>
<hr />
@if (Model != null && Model.Details != null)
{
    <div class="table-responsive middle">
        <table data-sortable class="table table-hover table-striped">
            <thead>
                <tr>
                    <th>Account</th>
                    <th>Product Code</th>
                    <th>Product Description</th>
                    <th>ChangedBy</th>
                    <th>LastChanged</th>
                    <th>AddedBy</th>
                    <th>Added</th>
                    
                </tr>
            </thead>
            <tbody>
                @foreach (var rec in Model.Details)
                {
                <tr>
                    <td>@rec.Account </td>
                    <td>@rec.ProductCode </td>
                    <td>@rec.ProductDescription </td>
                    <td>@rec.ChangedBy </td>
                    <td>@rec.LastChanged </td>
                    <td>@rec.AddedBy </td>
                    <td>@rec.Added </td>

                </tr>
                }
            </tbody>

        </table>
    </div>
}

<style>
    .redText {
        color: Red;
    }
</style>
